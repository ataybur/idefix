//yayinevi içindeki niteliklerin sayısını bulmak için
select sum(sayi) from yayin_nitelik 
where id_yayin in 
(select id_yayin from yazar_yayin 
where id_yazar=7) 
and id_nitelik=1;

select id_nitelik, sum(sayi) from yayin_nitelik 
where id_yayin in 
(select id_yazar from yazar_yayin 
where id_yayin=7)
and id_nitelik=1
group by id_nitelik;


select id_nitelik, sum(sayi) from yayin_nitelik 
where id_yayin in 
( 
select id_yayin from yazar_yayin 
where id_yazar=7
)
and id_nitelik in 
   (
    select id_nitelik from yayin_nitelik 
    where id_yayin in 
     (
     select id_yayin from yazar_yayin 
     where id_yazar=7
     )
   )
group by id_nitelik;


select id_yazar, id_nitelik, sum(sayi) from yayin_nitelik, yazar_yayin 
where yayin_nitelik.id_yayin in 
( 
select id_yayin from yazar_yayin 
where id_yazar=7
)
and id_nitelik in 
   (
    select id_nitelik from yayin_nitelik 
    where id_yayin in 
     (
     select id_yayin from yazar_yayin 
     where id_yazar=7
     )
   )
group by id_nitelik, id_yazar;
